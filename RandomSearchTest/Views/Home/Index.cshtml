@model RandomSearchTest.Models.SearchPage



<div class="col-md-4">

    <form method="get">

        <input name="query" type="search" placeholder="Enter name" />
        <input type="submit" />
    </form>

    <h3>Search results</h3>
    <table  data-page-length='25' class="display" id="result">
        <thead>
            <tr>
                <th class="sorting">id</th>
                <th class="sorting">name</th>
                <th class="sorting">surname</th>
            </tr>
        </thead>

        <tbody>
            @{

                foreach (var item in Model.Results)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                    </tr>



                }

            }
        </tbody>
    </table>

</div>